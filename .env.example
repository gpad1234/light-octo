# Flask Configuration
FLASK_ENV=production
FLASK_APP=app:app

# Session & Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# OpenAI Configuration
ENABLE_OPENAI_NLP=true
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database (if using)
DATABASE_URL=

# Gunicorn Configuration
GUNICORN_BIND=127.0.0.1:8000
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info
GUNICORN_ACCESS_LOG=/var/log/gunicorn/nlp-app-access.log
GUNICORN_ERROR_LOG=/var/log/gunicorn/nlp-app-error.log
GUNICORN_PIDFILE=/var/run/gunicorn/nlp-app.pid
GUNICORN_FORWARDED_ALLOW_IPS=127.0.0.1,localhost

# Logging
LOG_LEVEL=INFO

# Application Settings
DEBUG=false
JSON_SORT_KEYS=false
